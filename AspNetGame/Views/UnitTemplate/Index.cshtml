@model IEnumerable<AspNetGame.Models.Game.Units.UnitTemplate>
@{
    ViewBag.Title = "Manage unit templates";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <thead>
        <tr>
            <th>Unit name</th>
            <th>Abilities</th>
            <th>Nominal health</th>
            <th>Building delay</th>
            <th>Resources costs</th>
            <th><em>Actions</em></th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="6">No unit templates found</td></tr>
        } else
        {
            foreach (var template in Model)
            {
                <tr>
                    <td>@template.Name</td>
                    <td>@template.Abilities</td>
                    <td>@template.MaxHealth</td>
                    <td>@template.BuildingDelay</td>
                    <td>@Html.Partial("ResourcesCost", template.ResourceCosts)</td>
                    <td>
                        <a href="@Url.Action("Details", "UnitTemplate", new { id = template.Id })" class="btn btn-primary">
                            Details
                        </a>   
                    </td>
                </tr>
            }
        }
    </tbody>

</table>

@Html.ActionLink("Create a new", "Create", new object { }, new { @class = "btn btn-success" })
