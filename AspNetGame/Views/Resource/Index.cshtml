@model IEnumerable<AspNetGame.Models.Game.Base.Resource>
@{
    ViewBag.Title = "Manage resources";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <thead>
        <tr>
            <th>Resource name</th>
            <th>Resource image</th>
            <th><em>Actions</em></th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Count() == 0)
        {
        <tr><td colspan="3">No resources found</td></tr>
    }
    else
    {
        foreach (var resource in Model)
        {
            <tr>
                <td>@resource.Name</td>
                <td>
                    <img src="@(resource.ImagePath ?? "/Content/Images/empty.png")" class="resource-icon-g @(resource.ImagePath != null ? "rounded-image" : "")" />
                </td>
                <td>
                    <a href="@Url.Action("Details", "Resource", new { id = resource.Id })" class="btn btn-primary">
                        Details
                    </a>
                </td>
            </tr>
        }
    }
        </tbody>

    </table>
