@model IEnumerable<AspNetGame.Models.Game.Planet>
@{
    ViewBag.Title = "List of planets";
}
<h2>@ViewBag.Title</h2>

@foreach (var planet in Model)
{
    @Html.Partial("PlanetCard", planet);

    @Html.ActionLink("Create a new building", "Index", "Building", new {Id = planet.Id }, new { @class = "btn btn-success" })

}