@model AspNetGame.Models.Game.Planet
@using AspNetGame.Models.Game;
@using AspNetGame.Models.Game.ViewModels;
@{
    ViewBag.Title = "List of Building Types";
    ResourcesViewModel resourcesVM = ResourcesViewModel.Build(ViewBag.Player);
}

<div class="row">
    @foreach (var Unite in ViewBag.templateNumber)
    {
        object unit = Unite.Key;

        <div class="col-lg-3">
            <a>@Unite.Value</a>
            @Html.Partial("BuildingTypeCard", unit)
        </div>
    }
</div>

@Html.Partial("ResourcesCounters", resourcesVM)